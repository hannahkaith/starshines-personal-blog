<div class="edit-container">
  <main class="main edit">
    <a href="/dashboard">Back</a>
    <div class="admin-title">
      <h1>Edit Post</h1>

      <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
      </form>

    </div>

    <form action="/edit-post/<%= data._id %>?_method=PUT" method="POST"> <!-- updating data -->
      <label for="title"><b>Title</b></label>
      <input type="text" placeholder="Title" name="title" value="<%= data.title %>">

      <label for="body"><b>Content</b></label>
      <textarea name="body" cols="50" rows="10"><%= data.body%></textarea> <!-- Area to write contents -->

      <input type="submit" value="Update" class="btn">

    </form>
  </main>
</div>