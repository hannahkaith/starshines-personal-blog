<div class="dashboard-container">
  <main class="main dashboard">
<div class="admin-title">
  <h1>Posts</h1>
  <a href="/add-post" class="button"> + Add New</a>
</div>

<ul class="admin-posts">

  <% data.forEach(post => { %> <!-- Loop for each posts stored -->
   <li>
    <a href="/post/<%= post._id %>"> <!-- Unique ID -->
      <%= post.title %> <!-- Title of post -->
    </a>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= post._id %>" class="btn">Edit</a> <!-- Edit button -->
      <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn"> <!-- Delete button -->
      </form>
    </div>
   </li>
  <% }) %>
</ul>
</main>
</div>